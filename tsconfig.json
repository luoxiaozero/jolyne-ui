{
    "compilerOptions": {
        "paths": {
            "jolyne-ui": ["./src"]
        },
        "target": "es6",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "react",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"]
    },
    "include": [
        "demo/**/*.ts",
        "demo/**/*.d.ts",
        "demo/**/*.tsx",
        "demo/**/*.vue",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ]
}
